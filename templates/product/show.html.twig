{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="container">
        <div class="row text-center">
            <h1>Podgląd produktu</h1>
        </div>
        <div class="row">
            <div class="example-wrapper">
            <div class="container px-5 my-5">
                    <div class="mb-3">
                        <label class="form-label" for="name">Nazwa</label>
                        <input class="form-control" id="name" type="text" name="name" placeholder="Nazwa" disabled="disabled" value="{{ product.getName }}"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="kcal">kcal</label>
                        <input class="form-control" id="kcal" type="text" name="kcal" placeholder="kcal" disabled="disabled" value="{{ product.getKcal }}"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="proteins">Białko</label>
                        <input class="form-control" id="proteins" name="proteins" type="text" placeholder="Białko" disabled="disabled" value="{{ product.getProteins }}"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="carbs">Węglowodany</label>
                        <input class="form-control" id="carbs" type="text" name="carbs" placeholder="Węglowodany" disabled="disabled" value="{{ product.getCarbs }}"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="fat">Tłuszcz</label>
                        <input class="form-control" id="fat" type="text" name="fat" placeholder="Tłuszcz" disabled="disabled" value="{{ product.getFat }}"/>
                    </div>
            </div>
            <script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
        </div>
        </div>
    </div>
{% endblock %}
