{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Kcal</th>
                <td>{{ product.kcal }}</td>
            </tr>
            <tr>
                <th>Proteins</th>
                <td>{{ product.proteins }}</td>
            </tr>
            <tr>
                <th>Carbs</th>
                <td>{{ product.carbs }}</td>
            </tr>
            <tr>
                <th>Fat</th>
                <td>{{ product.fat }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
