{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Wybierz filtry:</h1>

        <form action="{{ path('app_main_get_all') }}" method="post">
            <div>
                <label for="power-station-id">ID Elektrowni: </label>
                <input type="number" min="1" name="power-station-id">
            </div>
            <div>
                <label for="power-station-id">Minimalna data utworzenia: </label>
                <input type="text" name="created-at"  placeholder="04-10-2022 22:10:12.12365">
            </div>
            <div>
                <label for="power-station-id">Minimalna średnia moc (kV): </label>
                <input type="number" min="1" name="average-power">
            </div>
            <div>
                <label for="power-station-id">Numer strony: </label>
                <input type="number" min="1" name="page-number">
            </div>
            <div>
                <label for="power-station-id">Wielkość strony: </label>
                <input type="number" min="1" name="page-size">
            </div>
            <div>
                <button type="submit">Pokaż wyniki</button>
            </div>
        </form>
</div>
{% endblock %}
